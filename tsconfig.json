{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@types/*": ["src/types/*"],
      "@types": ["src/types"],
      "@core/*": ["src/core/*"],
      "@browser/*": ["src/browser/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
